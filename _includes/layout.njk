<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
/>
        <title>
            {% if title %}{{ title }} | {% endif %}Martinslieder</title>
        <link
            rel="stylesheet"
            href="/style.css"
/>
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/@alpinejs/persist@3.x.x/dist/cdn.min.js"
        ></script>
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
        ></script>
    </head>

    <body class="wrapper stack">
        <header>
            <nav>
                <ul>
                    {%- for lied in collections.lied | sortByOrder -%}
                        <li>
                            <a href="{{lied.url}}">{{ lied.data.title | safe }}</a>
                        </li>
                    {%- endfor -%}
                </ul>
            </nav>
        </header>

        <main class="flow">
            {{ content | safe }}
        </main>

        <footer class="stack">
            <fieldset
                class="cluster"
                x-data="{
                    theme: $persist(''),
                    setTheme(theme) {
                        const html = document.firstElementChild
                        html.setAttribute('data-theme', theme)
                    }
                }"
                x-on:change="setTheme($event.target.value)"
                x-init="
                    if (!theme) {
                        theme = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
                                ? 'dark' : 'light'
                    }

                    setTheme(theme)
                "
            >
                <legend>Mein Licht</legend>
                <label>
                    <input
                        type="radio"
                        x-model="theme"
                        value="light"
/>
                    <span>ist an</span>
                </label>
                <label>
                    <input
                        type="radio"
                        x-model="theme"
                        value="dark"
/>
                    <span>ist aus</span>
                </label>
            </fieldset>

            <fieldset
                x-data="{
                    fontSize: $persist('2'),
                    setFontSize(fontSize) {
                        const html = document.firstElementChild
                        const value = `var(--font-size-${fontSize})`
                        html.style.setProperty('--text-font-size', value)
                    }
                }"
                x-on:change="setFontSize($event.target.value)"
                x-init="
                    if (!fontSize) {
                        fontSize = '2'
                    }

                    setFontSize(fontSize)
                "
            >
                <legend>Schriftgröße</legend>
                <label>
                    <input
                        type="range"
                        min="1"
                        max="5"
                        step="1"
                        x-model="fontSize"
/>
                </label>
            </fieldset>
        </footer>
    </body>
</html>
